<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/rg_view_selector"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:checkedButton="@id/rb_show_chart">

        <RadioButton
            android:id="@+id/rb_show_chart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@drawable/background_transparent"
            android:background="@drawable/control_panel_selector"
            android:drawableTop="@drawable/ic_chart_dark"
            android:paddingTop="3dp"
            android:text="Stats"
            android:textSize="12dp"/>

        <RadioButton
            android:id="@+id/rb_show_calendar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@drawable/background_transparent"
            android:background="@drawable/control_panel_selector"
            android:drawableTop="@drawable/ic_calendar_dark"
            android:paddingTop="3dp"
            android:text="Calendar"
            android:textSize="12dp"
            />
    </RadioGroup>
</LinearLayout>