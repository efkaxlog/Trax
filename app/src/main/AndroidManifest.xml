<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bajera.xlog.trax">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/trax_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/trax_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.ItemPickerActivity.ItemPickerActivity"
            android:theme="@style/AppTheme.NoActionBar">
        <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ItemActivity.ItemActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activities.EditItemActivity.EditItemActivity"
            android:label="New item..."
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>